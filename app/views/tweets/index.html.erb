<p  id="notice"><%= notice %></p><br>
<% if current_user%>
	<div class="container">
		<div class="row">
			<div class="col-md-4 col-md-offset-4 margin_bottom">
				<img class="img-circle image_size" src="<%= current_user.image %>" >
				<strong class= "name_color">Welcome <%= current_user.name %>!</strong>
			</div>
		</div>
	</div>
<% end %>

<div class="container input_field ">
	<input class="input"  id="tweet"  placeholder="Enter Your Tweet Here" maxlength="124">
	<input class="btn btn-info"  type="submit" value="tweet" id="submit">
</div>
	
<h5 class="text margin container" id="textarea_feedback"></h5>

<% if @tweets.present? %>
	<% @tweets.each do |tweet|%>
		<div class="input_field margin container">
			<div class="margin"><h3><%= tweet.user.name%>:- <small><%= tweet.contant %></small></h3></div>
		</div>	
	<% end %>
<% end %>
			
<script>
	$(document).ready(function(){
		
		$('#submit').click(function(){
			var value = $('#tweet').val();
		    $.post("/tweets",
		    {
		        tweet: value
		    },
		    function(data, status){
		        
		       
		    });
		});

		var text_max = 124;
			$('#textarea_feedback').html(text_max + ' characters remaining');
			$('#tweet').keyup(function(){

				var text_length = $('#tweet').val().length;

				var text_remaining = text_max - text_length;
				$('#textarea_feedback').html(text_remaining + ' characters remaining')
			});

		});
</script>




			
